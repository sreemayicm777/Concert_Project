

<div class="container mt-4">
  <h2>My Bookings</h2>
  
  <% if (bookings.length === 0) { %>
    <div class="alert alert-info">You haven't booked any tickets yet.</div>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="<%= booking.concert.image %>" class="card-img-top" alt="<%= booking.concert.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= booking.concert.name %></h5>
              <p class="card-text">
                <i class="fas fa-calendar-day"></i> <%= booking.concert.date.toDateString() %><br>
                <i class="fas fa-clock"></i> <%= booking.concert.time %><br>
                <i class="fas fa-ticket-alt"></i> Tickets: <%= booking.tickets %><br>
                <i class="fas fa-dollar-sign"></i> Total: $<%= (booking.tickets * booking.concert.ticketPrice).toFixed(2) %>
              </p>
            </div>
            <div class="card-footer">
              <small class="text-muted">
                Booked on: <%= booking.bookedAt.toLocaleDateString() %>
              </small>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

