<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <% include ../partials/header %>

    <div class="container mt-5">
        <h1 class="mb-4">My Bookings</h1>

        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (bookings.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Concert</th>
                            <th>Date</th>
                            <th>Tickets</th>
                            <th>Status</th>
                            <th>Booked At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% concerts.forEach(booking => { %>
                            <tr>
                                <td><%= concert.name %></td>
                                <td><%= concert.date.toLocaleString() %></td>
                                <td><%= tickets %></td>
                                <td>
                                    <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : 'danger' %>">
                                        <%= concert.status %>
                                    </span>
                                </td>
                                <td><%= concert.bookedAt.toLocaleString() %></td>
                                <td>
                                    <% if (concert.status === 'confirmed') { %>
                                        <form action="/bookings/<%= concert._id %>/cancel" method="POST">
                                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">You have no bookings yet.</div>
        <% } %>
    </div>

    <% include ../partials/footer %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>