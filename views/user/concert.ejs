
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 style="font-weight: bolder;">Concerts</h1>
  
</div>

<!-- Add search and filter controls -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-search"></i></span>
      <input type="text" id="concert-search" class="form-control" placeholder="Search concerts...">
    </div>
  </div>
  <div class="col-md-6">
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-calendar"></i></span>
      <input type="date" id="date-filter" class="form-control">
    </div>
  </div>
</div>

<% if (concerts.length === 0) { %>
  <div class="empty-state alert alert-info py-5">
    <i class="fas fa-music"></i>
    <h3>No concerts found</h3>
    <p class="mb-0">Add your first concert or check back later for updates!</p>
  </div>
<% } else { %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% concerts.forEach(concert => { %>
      <div class="col">
        <div class="card h-100 shadow-sm concert-card">
          <img src="<%= concert.image %>" 
               class="card-img-top" 
               alt="<%= concert.name %>"
               onerror="this.onerror=null;this.src='/images/default-concert.jpg'">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= concert.name %></h5>
            <p class="card-text mb-1">
              <i class="fas fa-calendar-day me-1"></i>
              <%= concert.date.toLocaleDateString('en-US', {
                weekday: 'short',
                month: 'short',
                day: 'numeric',
                year: 'numeric'
              }) %>
            </p>
            <p class="card-text mb-1">
              <i class="fas fa-clock me-1"></i> <%= concert.time %>
            </p>
            <p class="card-text mb-1">
              <i class="fas fa-map-marker-alt me-1"></i> <%= concert.venue %>
            </p>
            <div class="ticket-info mb-3">
              <p class="card-text mb-0">
                <i class="fas fa-ticket-alt me-1"></i>
                $<%= concert.ticketPrice.toFixed(2) %> | 
                <span class="<%= concert.availableTickets < 20 ? 'text-danger' : '' %>">
                  <%= concert.availableTickets %> available
                </span>
              </p>
            </div>
            <div class="mt-auto">
              <a href="/bookings/<%= concert._id %>" class="btn btn-primary w-100 btn-book">
                <i class="fas fa-ticket-alt me-1"></i> Book Now
              </a>  
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>

<!-- Include the CSS and JS files -->
<link rel="stylesheet" href="/css/booking.css">
<script src="/js/booking.js"></script>
