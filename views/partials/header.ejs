<header class="bg-dark text-white p-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="m-0">
                <a href="/" class="text-white text-decoration-none">ConcertHub</a>
            </h1>
            
            <div class="d-flex align-items-center">
                <!-- Concert Navigation -->
                <nav class="me-4">
                    <a href="/concerts" class="btn btn-outline-light me-2">All Concerts</a>
                    <% if (user) { %>
                        <a href="/concerts/new" class="btn btn-primary">Add Concert</a>
                    <% } else { %>
                        <a href="/login" class="btn btn-primary">Add Concert</a>
                    <% } %>
                </nav>
                
                <!-- User Navigation -->
                <div class="navbar-nav">
                    <% if (user) { %>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <span class="me-1">
                                    Welcome, <%= user.username %>
                                    <% if (user.role === 'admin') { %>
                                        <span class="badge bg-primary ms-1">Admin</span>
                                    <% } %>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    <% } else { %>
                      
                       
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>