<header class="bg-dark text-white p-3 sticky-top shadow-lg">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="m-0">
                <a href="/" class="text-white text-decoration-none d-flex align-items-center">
                    <i class="fas fa-music me-2" style="font-size: 1.5rem;"></i>
                    <span class="fw-bold" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">ConcertHub</span>
                </a>
            </h1>
            
            <div class="d-flex align-items-center">
                <!-- Concert Navigation -->
                <nav class="me-4">
                    <a href="/concerts" class="btn btn-outline-light me-2 hover-scale">
                        <i class="fas fa-list me-1"></i> All Concerts
                    </a>
                    <% if (user) { %>
                        <a href="/concerts/new" class="btn btn-primary hover-scale">
                            <i class="fas fa-plus me-1"></i> Add Concert
                        </a>
                    <% } else { %>
                        <a href="/login" class="btn btn-primary hover-scale">
                            <i class="fas fa-plus me-1"></i> Add Concert
                        </a>
                    <% } %>
                </nav>
                
                <!-- User Navigation -->
                <div class="navbar-nav">
                    <% if (user) { %>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" style="cursor: pointer;">
                                <div class="avatar me-2" style="width: 32px; height: 32px; background-color: #6c757d; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <span class="text-white"><%= user.username.charAt(0).toUpperCase() %></span>
                                </div>
                                <span class="me-1">
                                    <%= user.username %>
                                    <% if (user.role === 'admin') { %>
                                        <span class="badge bg-primary ms-1">Admin</span>
                                    <% } %>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i> Profile</a></li>
                                <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog me-2"></i> Settings</a></li>
                                <% if (user.role === 'admin') { %>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/admin"><i class="fas fa-lock me-2"></i> Admin Panel</a></li>
                                <% } %>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                            </ul>
                        </div>
                    <% } else { %>
                        <div class="d-flex">
                            <a href="/login" class="btn btn-outline-light me-2 hover-scale">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                            <a href="/register" class="btn btn-success hover-scale">
                                <i class="fas fa-user-plus me-1"></i> Register
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>

<style>
    /* Add this to your main CSS file */
    .hover-scale {
        transition: all 0.2s ease-in-out;
    }
    .hover-scale:hover {
        transform: scale(1.05);
    }
    .dropdown-menu {
        min-width: 200px;
    }
    .avatar {
        transition: all 0.3s ease;
    }
    .nav-link:hover .avatar {
        background-color: #495057 !important;
    }
    .navbar-nav .nav-link {
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
    }
    .navbar-nav .nav-link:hover {
        background-color: rgba(255,255,255,0.1);
    }
    .dropdown-item {
        padding: 0.5rem 1rem;
    }
    .dropdown-item:hover {
        background-color: #f8f9fa;
    }
</style>