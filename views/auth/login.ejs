<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-lg" style="background: #1a1a1a; border-top: 3px solid #d4af37 !important;">
        <div class="card-header border-0" style="background: #121212; color: #d4af37;">
          <h3 class="m-0"><i class="fas fa-sign-in-alt me-2"></i>Login Accountsdhfkjhalsjdhflkajshdlfk</h3>
        </div>
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger border-0" style="background: #2c0e0e; color: #ff6b6b; border-left: 3px solid #ff6b6b;">
              <i class="fas fa-exclamation-circle me-2"></i><%= error %>
            </div>
          <% } %>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label class="form-label" style="color: #d4af37;">Username</label>
              <input type="text" name="username" class="form-control" required 
                     style="background: #2a2a2a; border: 1px solid #444; color: #fff; padding: 10px;">
              <small class="text-muted" style="color: #666 !important;">Enter your username</small>
            </div>
            <div class="mb-3">
              <label class="form-label" style="color: #d4af37;">Enter the Password</label>
              <input type="password" name="password" class="form-control" required 
                     style="background: #2a2a2a; border: 1px solid #444; color: #fff; padding: 10px;">
              <small class="text-muted" style="color: #666 !important;">Enter your password</small>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <button type="submit" class="btn hover-scale" 
                      style="background-color: #d4af37; color: #121212; font-weight: 600; padding: 8px 24px;">
                <i class="fas fa-sign-in-alt me-2"></i>Login
              </button>
              <a href="/forgot-password" class="text-decoration-none" style="color: #d4af37;">
                Forgot password?
              </a>
            </div>
          </form>
        </div>
        <div class="card-footer text-center border-0" style="background: #121212; color: #888;">
          Don't have an account? 
          <a href="/signup" class="text-decoration-none" style="color: #d4af37; font-weight: 500;">
            Sign Up
          </a>
        </div>
      </div>
    </div>
  </div>
</div>