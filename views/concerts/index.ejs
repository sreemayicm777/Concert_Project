 <%- include('../partials/header') %>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Upcoming Concerts</h1>
    <a href="/concerts/new" class="btn btn-success">
        <i class="fas fa-plus"></i> Add Concert
    </a>
</div>

<% if (concerts.length === 0) { %>
    <div class="alert alert-info">No concerts found. Add your first concert!</div>
<% } else { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Concert Details</th>
                    <th>Date & Time</th>
                    <th>Venue</th>
                    <th>Tickets</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% concerts.forEach(concert => { %>
                    <tr>
                        <td style="width: 150px;">
                            <img src="<%= concert.image %>" 
                                 class="img-thumbnail" 
                                 alt="<%= concert.name %>"
                                 onerror="this.onerror=null;this.src='/images/default-concert.jpg'">
                        </td>
                        <td>
                            <h5><%= concert.name %></h5>
                        </td>
                        <td>
                            <div><i class="fas fa-calendar-day"></i> 
                                <%= concert.date.toLocaleDateString('en-US', { 
                                    weekday: 'short', 
                                    month: 'short', 
                                    day: 'numeric', 
                                    year: 'numeric' 
                                }) %>
                            </div>
                            <div><i class="fas fa-clock"></i> <%= concert.time %></div>
                        </td>
                        <td>
                            <i class="fas fa-map-marker-alt"></i> <%= concert.venue %>
                        </td>
                        <td>
                            <i class="fas fa-ticket-alt"></i> 
                            $<%= concert.ticketPrice %><br>
                            Available: <%= concert.availableTickets %>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/concerts/<%= concert._id %>" class="btn btn-primary">View</a>
                                <a href="/concerts/<%= concert._id %>/edit" class="btn btn-secondary">Edit</a>
                                <form action="/concerts/<%= concert._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>
<%- include('../partials/footer') %>